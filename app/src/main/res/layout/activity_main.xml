<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alanpasi.apsbulletmuzzleenergy.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/lbl_BulletWeight"
        android:id="@+id/textViewLblBulletWeight"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="5"
        android:id="@+id/editTextBulletWeight"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:inputType="numberDecimal"
        android:hint="0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/lbl_BulletVelocity"
        android:id="@+id/textViewLblBulletVelocity"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:textStyle="bold" />
<EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="5"
        android:id="@+id/editTextBulletVelocity"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:hint="0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/lbl_Result"
        android:id="@+id/textViewLblResult"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/editTextResult"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:hint="0" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="20dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rdBtnSistemaImperial"
            android:id="@+id/rbSistemaImperial"
            android:checked="true"
            android:textSize="20sp"
            android:onClick="SelectSystemUnit"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rdBtnSistemaInternational"
            android:id="@+id/rbSistemaInternational"
            android:checked="false"
            android:textSize="20sp"
            android:onClick="SelectSystemUnit"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblMyName"
        android:id="@+id/textView"
        android:layout_gravity="top|center" />
</LinearLayout>
